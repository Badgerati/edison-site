doctype 5
html
    include includes/head.pug

    body
        include includes/nav.pug
        include includes/sub-nav.pug

        #content.container
            // display any errors if there are any on page load
            if (error && error.length > 0)
                div.alert.alert-danger(role='alert')
                    span.glyphicon.glyphicon-exclamation-sign(aria-hidden='true')
                    span #{error}

            div.panel.panel-default
                div#runs-panel.panel-body.panel-board
                    // progress bar
                    div#runs-load

                    // errors
                    div#runs-error.alert.alert-danger.hidden(role='alert')

                    // table to display all the runs (paginated)
                    table#runs.table.table-hover.table-responsive
                        thead
                            tr
                                th.centre Status
                                th Name
                                th Project
                                th Computer
                                th Group
                                th Tests Run
                                th Duration

                        tbody

                    // info
                    div#runs-info.alert.alert-info.hidden(role='alert')

                // runs pagination
                nav.pagination(aria-label="Page Navigation")
                    ul#runs-paging.pagination